{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2022"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}